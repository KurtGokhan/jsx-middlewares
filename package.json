{
  "name": "jsx-middlewares",
  "type": "module",
  "description": "Transform rendered JSX with middlewares",
  "homepage": "https://gkurt.com/jsx-middlewares/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/KurtGokhan/jsx-middlewares.git"
  },
  "keywords": ["jsx", "react", "middleware", "decorator", "directive"],
  "version": "2.0.0",
  "license": "MIT",
  "author": {
    "name": "Gokhan Kurt",
    "email": "krtgkn@gmail.com",
    "url": "https://github.com/KurtGokhan"
  },
  "files": ["README.md", "dist", "!dist/*.tsbuildinfo"],
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./react": {
      "types": "./dist/esm/react/index.d.ts",
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "default": "./dist/esm/react/index.js"
    },
    "./react/*": {
      "types": "./dist/esm/react/*.d.ts",
      "import": "./dist/esm/react/*.js",
      "require": "./dist/cjs/react/*.js",
      "default": "./dist/esm/react/*.js"
    }
  },
  "scripts": {
    "tsc": "tsc -b tsconfig.lib.json tsconfig.cjs.json",
    "start": "npm run tsc -- --watch",
    "build": "npm run clean && npm run tsc",
    "clean": "rimraf dist && rimraf tsconfig.lib.tsbuildinfo",
    "test": "vitest",
    "lint": "biome lint",
    "format": "biome format",
    "check": "biome check",
    "prepare": "husky && npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.10",
    "@types/react": "19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "overrides": {
    "vite": "$vite"
  },
  "volta": {
    "node": "22.12.0",
    "npm": "10.9.1"
  },
  "lint-staged": {
    "*": ["biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"]
  },
  "workspaces": [".", "packages/*", "examples/*", "website"]
}

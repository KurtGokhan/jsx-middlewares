{
  "extends": [
    "prettier"
  ],
  "ignorePatterns": [
    "node_modules",
    "artifacts",
    "dist"
  ],
  "rules": {
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "-",
          "+"
        ],
        "line": {
          "markers": [
            "/"
          ]
        }
      }
    ]
  }
}
